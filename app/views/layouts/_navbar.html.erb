<head>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
<script type="text/javascript">
$(document).ready(function() {
    $('dropdown-toggle').dropdown()
});
</script>
</head>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to image_tag("fairbnb_logo.png", :class => 'nav-logo'), root_path %>
    </div>
    <div id="navbar">
      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to 'Admin Dashboard', admin_dashboard_index_path %></li>
            <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Dashboard', dashboard_path %></li>
            <li>&nbsp;&nbsp;&nbsp;</li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle profile-image" data-toggle="dropdown">
                <img src="<%= current_user.image_url %>" class="img-circle special-img"><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><%= link_to 'Profile', user_path(current_user) %></li>
                        <li class="divider"></li>
                        <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
                    </ul>
            </li>
            <!-- <li><img src="<%#= current_user.image_url%>" class="img-circle" width="50"></li> -->
          <% end %>
        <% else %>
          <li><%= link_to 'Sign Up', sign_up_path %></li>
          <li><%= link_to 'Log In', log_in_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<% if user_signed_in? %>
  <nav class="navbar subnav">
    <div class="container sub-container">
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Dashboard', dashboard_path %></li>
          <% if current_user.admin? %>
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                Admin Menu
                <span class="caret"></span>
                  </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                      <li> <%= link_to "Users", admin_users_path %></li>
                      <li> <%= link_to "Properties", admin_properties_path %></li>
                      <li><%= link_to 'Profile', user_path(current_user) %></li>
                      <li><%= link_to 'My Properties', user_properties_path %></li>
                      <li><%= link_to 'My Reservations', user_reservations_path %></li>
                      <li><%= link_to 'Messages', dashboard_path %></li>
                    </ul>
            </div>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% end %>
