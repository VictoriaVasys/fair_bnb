<div class="row">

  <!-- <div class="col-md-7">
    
  <hr> -->
  <div class="col-md-4">
    <div class="panel space-6">
        <div class="media media-photo-block">
          <div class="text-center">
            <%= image_tag @user.image_url, class: "profile-pic-large" %>
          </div>
        </div>
      </div>
        <div class="panel-body">
          <ul class="list-unstyled text-center">
            <% if @user == current_user %>
              <li><%= link_to 'Edit Profile', edit_user_path(@user) %></li>
            <% end %>

            <li> REVIEWS
              <!-- <%#= link_to "Reviews", user_reviews_path- or whatever %> -->
            </li>
          </ul>
        </div>
        <div class="text-center">
        <%= link_to "Add a property", new_property_path, class: 'btn btn-custom' %>
      </div>
      </div>
    <div class="col-md-8">
    <h1>Hey, I'm <%= @user.first_name %>!</h1>
    <h4> <%= @user.hometown %>  |   Member since <%= @user.created_at.strftime('%b %d, %Y') %><br><br>
      About me: <%= @user.description %></h4>
    <!-- <h4><%#= @user.email %></h4> -->
  </div>

  </div>
</div>
