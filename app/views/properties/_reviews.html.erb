<div class="col-md-8">
<% unless @property.reviews.empty? %>
<h2><%= @property.reviews.count %> Reviews</h2>
  <% @property.reviews.each do |review| %>
    <%= image_tag(review.user.image_url, height: '32', width: '32') %> <%= review.user.full_name %>
    <div class="star-rating" data-score= <%= review.rating %> ></div>
    <p><%= review.comment %></p>
  <% end %>
<% end %>
<% if current_user %>
<%= form_for([@property, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= f.label :rating, class: 'col-sm-2 form-control-label' %>
	<div class="col-sm-6" id='star-rating'></div>
  </div>

  <div class="form-group row">
    <%= f.label :comment, class: 'col-sm-2 form-control-label' %>
	<div class="col-sm-6">
      <%= f.text_area :comment, class: 'form-control' %>
	<div>
  </div>
  <br/>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit 'Submit', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>
<% end %>
</div>
<script>
  $(document).ready(function(){
    $('.star-rating').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
  $('#star-rating').raty({
      path: '/assets',
      scoreName: 'review[rating]'
  });
})
</script>
