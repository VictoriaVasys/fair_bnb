<%= form_tag new_user_reservation_path, method: :get do %>

  <%= label_tag :check_in_date, "Check In" %>
  <%= date_field_tag :check_in_date, class: "form-control", :required => true %>

  <%= label_tag :check_out_date, "Check Out" %>
  <%= date_field_tag :check_out_date, class: "form-control", :required => true %>

  <%= label_tag :guests, "Guests" %>
  <%= number_field_tag :guests, "1", min: 1, max:@property.number_of_guests, :required => true, class: "form-control" %>
  <br>
  <%= submit_tag "Request to Book", class: "btn btn-primary" %>

  <%= hidden_field_tag :property_id, @property.id %>
<% end %>


